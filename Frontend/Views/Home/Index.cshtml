@{
    ViewData["Title"] = "Home";
    var featuredProducts = ViewBag.FeaturedProducts as List<Frontend.Models.Product>;
    var newProducts = ViewBag.NewProducts as List<Frontend.Models.Product>;
    var popularProducts = ViewBag.PopularProducts as List<Frontend.Models.Product>;
}

<!-- Render Featured Products -->
@foreach (var product in featuredProducts)
{
    <div>
        <h3>@product.Name</h3>
        <p>@product.Description</p>
        <p>@product.Price</p>
        <a href="@Url.Action("ProductDetails", "Home", new { id = product.Id })">View Details</a>
    </div>
}

<!-- Render New Products -->
@foreach (var product in newProducts)
{
    <div>
        <h3>@product.Name</h3>
        <p>@product.Description</p>
        <p>@product.Price</p>
        <a href="@Url.Action("ProductDetails", "Home", new { id = product.Id })">View Details</a>
    </div>
}

<!-- Render Popular Products -->
@foreach (var product in popularProducts)
{
    <div>
        <h3>@product.Name</h3>
        <p>@product.Description</p>
        <p>@product.Price</p>
        <a href="@Url.Action("ProductDetails", "Home", new { id = product.Id })">View Details</a>
    </div>
}
